{
    "compilerOptions": {
        // bundle place
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        // compile to es5 for the browser
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        // common js to import/export
        "esModuleInterop": true,
        // imports without * as prefix
        "allowSyntheticDefaultImports": true
    },
    //
    "ts-node": {
        "compilerOptions": {
            // fix ts-node support of commonjs
            "module": "commonjs"
        }
    }
}